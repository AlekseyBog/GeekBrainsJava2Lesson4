<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.Controller">
    <stylesheets>
        <URL value="@/style.css" />
    </stylesheets>
    <MenuBar>
        <Menu text="Menu">
            <MenuItem onAction="#exitAction" text="Exit" />
        </Menu>
    </MenuBar>
    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="textField" onAction="#sendText" promptText="Input text..." HBox.hgrow="ALWAYS" />
        <Button onAction="#sendText" text="Send" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" />
            </HBox.margin></Button>
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </VBox.margin>
    </HBox>
</VBox>